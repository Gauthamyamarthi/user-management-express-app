<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f7fa;
    }
    .container {
      margin-top: 50px;
    }
    .table thead th {
      text-align: center;
    }
    .table tbody td {
      vertical-align: middle;
      text-align: center;
    }
    .btn-sm {
      padding: 5px 10px;
      font-size: 0.85rem;
    }
    h1 {
      font-weight: 700;
      font-size: 2.5rem;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 600;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>
      <span>&#128101;</span> Users List
    </h1>
    <a href="/new" class="btn btn-primary my-3">
      <span>&#10133;</span> Add User
    </a>
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
              <a href="/edit/<%= user.id %>" class="btn btn-warning btn-sm me-2">Edit</a>
              <form action="/user/<%= user.id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
